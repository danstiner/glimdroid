<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.ChannelActivity" parent="AppTheme.NoActionBar">
        <item name="android:statusBarColor">@android:color/background_dark</item>
    </style>

    <style name="AppTheme.NoStatusBar" parent="AppTheme.NoActionBar">
        <item name="android:statusBarColor">
            @android:color/transparent
        </item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.Button.Follow" parent="@style/Widget.Material3.Button.TextButton">
        <!--        <item name="android:paddingLeft">4dp</item>-->
        <!--        <item name="android:paddingRight">4dp</item>-->
        <!--        <item name="android:insetLeft">4dp</item>-->
        <!--        <item name="android:insetRight">4dp</item>-->
        <item name="android:textColor">?attr/colorOnBackground</item>
        <item name="android:minWidth">20dp</item>
    </style>

    <style name="AppTheme.Button.LiveNotifications" parent="@style/Widget.Material3.Button.IconButton">
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="iconTint">?attr/colorOnBackground</item>
    </style>

    <style name="AppTheme.Button.Support" parent="@style/Widget.Material3.Button">
        <item name="backgroundTint">@color/support_purple</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
    </style>

    <style name="AppTheme.Chip.Tag" parent="@style/Widget.Material3.Chip.Suggestion">
        <item name="android:checkable">false</item>

        <item name="chipMinHeight">24dp</item>
        <item name="chipStartPadding">1dp</item>
        <item name="chipEndPadding">1dp</item>
        <item name="chipMinTouchTargetSize">32dp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppTheme.Chip.Tag</item>-->
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.AppTheme.Chip.Tag</item>

        <item name="chipStrokeWidth">0dp</item>
        <item name="chipBackgroundColor">?attr/colorSurfaceVariant</item>

    </style>

    <style name="ShapeAppearanceOverlay.AppTheme.Chip.Tag" parent="">
        <item name="cornerSize">8dp</item>
    </style>

    <style name="TextAppearance.AppTheme.Chip.Tag" parent="@style/TextAppearance.Material3.LabelMedium">
        <item name="android:textSize">11sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="AppTheme.TextInputEditText.Message" parent="@style/Widget.Material3.TextInputEditText.OutlinedBox.Dense" />

</resources>